<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppExamen01.Login">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Bienvenido - Examen JOSÉ MÉNDEZ" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Image Source="uisrael.jpg" WidthRequest="120" HeightRequest="120"/>

        <Entry x:Name="txtUsuario" Placeholder="Ingrese su Usuario"/>
        <Entry x:Name="txtContraseña" Placeholder="Ingrese su Contraseña" IsPassword="True"/>
        <Label x:Name="lblMensaje" Text="" TextColor="Red"/>

        <Button x:Name="btnVerificar" Text="Verificar" Clicked="btnVerificar_Clicked"/>
    </StackLayout>

</ContentPage>
